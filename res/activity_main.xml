<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" tools:context=".MainActivity"
    android:background="#ff002526"
    android:weightSum="10">
    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/view_fontsize_s"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:textSize="@dimen/view_fontsize"
        android:layout_weight="3"
        android:gravity="bottom|right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:hint="0"
        android:maxLength="14" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:weightSum="8">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_weight="1">
            <Button
                android:id="@+id/mult"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="*"
                android:layout_weight="1" />
            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="+"
                android:layout_weight="1" />
            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="-"
                android:layout_weight="1" />
            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="CLEAR"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_weight="1">
            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="/"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/seven"
                android:onClick="numberClick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="7"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/eight"
                android:onClick="numberClick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="8"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/nine"
                android:onClick="numberClick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="9"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <Button
                android:id="@+id/solve"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="="
                android:layout_weight="1"/>
            <Button
                android:id="@+id/four"
                android:onClick="numberClick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="4"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/five"
                android:onClick="numberClick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="5"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/six"
                android:onClick="numberClick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="6"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_weight="1">
            <Button
                android:id="@+id/zero"
                android:onClick="numberClick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="0"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/one"
                android:onClick="numberClick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="1"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/two"
                android:onClick="numberClick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="2"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/three"
                android:onClick="numberClick"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="3"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
